<div class="card mb-3">
          <div class="card-header">
            <i class="fas fa-table"></i>
            Manage Projects</div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                  <tr>
                    <th>Project Name</th>
                    <th>Description</th>
                    <th>Start Date</th>
                    <th>Developer Count</th>
                    <th colspan="3">Action</th>
                  </tr>
                </thead>
                <tbody>
                  <%@projects.each do |project|%>
                    <tr>
                      <td><%=project.name%></td>
                      <td><%=project.description%></td>
                      <td><%=project.created_at.strftime("%d-%m-%y")%></td>
                      <td><%=project.developer_count.nil? ? "0" : project.developer_count %></td>
                      <td><%= link_to "<span>Add Tasks</span>".html_safe, add_tasks_projects_path(id: project.id) ,remote: true%></td>
                      <td><%= link_to "<span>Add Developers</span>".html_safe, unmapped_developers_projects_path(id: project.id) ,remote: true%></td>
                      <td><%= link_to "<span>Allocate Tasks</span>".html_safe, task_allocation_list_tasks_path(id: project.id) ,remote: true%></td>
                    </tr>
                  <%end%>
                </tbody>
              </table>
            </div>
          </div>
          <div class="card-footer small text-muted"></div>
        </div>