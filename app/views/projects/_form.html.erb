<div style="width: 90%; margin-left: 5%;">
	<%=form_for project,url:{action: action},method: action_method,remote: true do |f|%>
		<div class="form-group">
			<%=f.label :name%>
			<%=f.text_field :name,class:"form-control"%>
		</div>
		<div class="form-group">
			<%=f.label :description%>
			<%=f.text_area :description,class:"form-control"%>
		</div>			
			<%=f.submit action==:create ? "Create" : "Update" ,class:"btn btn-outline-success",onclick:"return validate();"%>
	<%end%>
</div>
<script type="text/javascript">
	function validate(){
		var name=$('#project_name').val();
		var description=$('#project_description').val();
		if(name=="")
		{
			alert("Kindly provide name to your project");
			return false;
		}
		if(description=="")
		{
			alert("Kindly describe your project");
			return false;
		}
		return true;
	}
</script>